<div class="container m-auto flex justify-between items-center">
  <div class="flex p-1">
    <a href="/"><%= image_tag "Logo.png"%></a>
    <!-- <div>
      <%= image_tag "Logo.png"%>
    </div> -->
    <div class="ml-3 m-auto">
      <% if current_user.present? %>
        <%= link_to 'Vrtic Razmeni', root_path %>
      <% else %>
        <%= link_to 'Vrtic Razmeni', wishes_path %>
      <% end %>
    </div>
  </div>
  <% if current_user.present? %>
    <span data-test="current-user-email"><%= current_user.email %></span>
    <%= form_tag destroy_user_session_path, method: :delete, class: 'd-inline' do %>
      <%= submit_tag 'Odjavi se' %>
    <% end %>

  <% else %>
    <div>
      <%= link_to "Prijavi se", new_user_session_path, class: 'bg-gray-600 p-1 justify-self-end rounded-md text-sm leading-5 font-medium py-1 px-2' %>
    </div>
  <% end %>
</div>
