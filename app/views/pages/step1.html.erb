<h1>Step 1</h1>

<section class="flex flex-col items-center px-[5vw] py-8 md:px-[20vw] md:py-16 text-blue-400 bg-gray-600 text-xl md:text-left">
  <h3 class="text-2xl font-semibold text-center text-blue-400 md:text-left sm:text-4xl rounded-md md:mb-4">
    Fill up the form with required information
  </h3>
  <%= form_with(model: @select_form, url: pages_step1_post_path) do |f| %>
    <div class="flex flex-col items-center my-8">
      <div class="mr-4 text-white">
        <%= f.label :name, placeholder: "Name" , class: "text-base"%>
      </div>
      <div>
        <%= f.text_field :name , :required => 'required', class: "bg-white text-blue-500 rounded-md p-4 max-w-[50vw] md:max-w-[30vw] text-sm"  %>
      </div>				
    </div>
    <div class="flex flex-col items-center my-8">
      <div class="mr-4 text-white">
        <%= f.label :email , class: "text-base"%>
      </div>
      <div>
        <%= f.email_field :email , :required => 'required' , class: "bg-white text-blue-500 rounded-md p-4 max-w-[50vw] md:max-w-[30vw] text-sm" %>
      </div>				
    </div>
    <div class="flex flex-col items-center my-8">
      <div class="mr-4 text-white">
        <%= f.label :select_kindergarten , class: "text-base"%>
      </div>
      <div class="text-blue-500 bg-white rounded-md p-4 max-w-[50vw] md:max-w-[30vw] overflow-hidden text-sm">
        <%= f.select "kindergarten_selection", options_for_select([ "Option 1", "Option 2", "Option 3", "Option 4", "Option 5", "Name of the kindergarten, Adress" ], "Option 1"), :required => 'required' %>
      </div>				
    </div>
    <div class="flex flex-row justify-center">
      <button class="px-5 py-3 text-white bg-blue-400 hover:text-blue-400 hover:bg-white rounded-md">
        <%= f.submit :Send %>
      </button>
    </div>
  <% end %>
</section>